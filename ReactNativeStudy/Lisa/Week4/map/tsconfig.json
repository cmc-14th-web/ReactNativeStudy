{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "paths": {
    "@components/*": ["src/components/*"],
    "@constants/*": ["src/constants/*"],
    "@navigators/*": ["src/navigators/*"],
    "@screens/*": ["src/screens/*"],
    "@styles/*": ["src/styles/*"],
    "@models/*": ["src/models/*"],
    "@utils/*": ["src/utils/*"]
  },
  "extends": "@tsconfig/react-native/tsconfig.json"
}
